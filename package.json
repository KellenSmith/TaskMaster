{
    "name": "task-master",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "next dev --turbopack --experimental-https",
        "build": "pnpm prisma generate --schema=./src/prisma/schema.prisma && next build",
        "start": "next start",
        "lint": "next lint",
        "prisma-generate": "pnpm prisma generate --schema=./src/prisma/schema.prisma",
        "prisma-migrate": "pnpm prisma migrate dev --schema=./src/prisma/schema.prisma",
        "prisma-push": "pnpm prisma db push --schema=./src/prisma/schema.prisma",
        "email": "email dev --dir=./src/app/lib/mail-service/mail-templates --port=3001",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest watch",
        "format": "prettier --write .",
        "format:check": "prettier --check ."
    },
